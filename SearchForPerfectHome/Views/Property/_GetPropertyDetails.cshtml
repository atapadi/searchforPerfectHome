@model SearchPerfectHome.Models.PropertyModel

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <a href="#" class="close" data-dismiss="modal" aria-hidden="true">&times;</a>
            <h4 class="modal-title" id="edit-user-title">Property Details</h4>
            @Html.HiddenFor(model => model.UserId)
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

                    <div class="form-group row">
                        <div class="col-md-3">
                            @Html.LabelFor(x => x.University, new { @class = "control-label", @id = "lblLoginName" })
                        </div>
                        <div class="col-md-8">
                            @Html.TextBoxFor(x => x.University, new { @class = "form-control", @id = "univ-name", @readonly = true })
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-3">
                            @Html.LabelFor(x => x.Users.UserName, new { @class = "control-label", @id = "lblFullName" })
                        </div>
                        <div class="col-md-8">
                            @Html.TextBoxFor(x => x.Users.UserName, new { @class = "form-control", @id = "user-name", @readonly = true })
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-3">
                            @Html.LabelFor(x => x.Users.Email, new { @class = "control-label", @id = "lblDescription" })
                        </div>
                        <div class="col-md-8">
                            @Html.TextBoxFor(x => x.Users.Email, new { @class = "form-control", @id = "email", @readonly = true })
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-3">
                            @Html.LabelFor(x => x.Address, new { @class = "control-label", @id = "lblDescription" })
                        </div>
                        <div class="col-md-8">
                            @Html.TextAreaFor(x => x.Address, new { @class = "form-control", @id = "addresss", @readonly = true })
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-3">
                            @Html.LabelFor(x => x.City, new { @class = "control-label", @id = "lblDescription" })
                        </div>
                        <div class="col-md-8">
                            @Html.TextBoxFor(x => x.City, new { @class = "form-control", @id = "city", @readonly = true })
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-3">
                            @Html.LabelFor(x => x.State, new { @class = "control-label", @id = "lblDescription" })
                        </div>
                        <div class="col-md-8">
                            @Html.TextBoxFor(x => x.State, new { @class = "form-control", @id = "state", @readonly = true })
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-3">
                            @Html.LabelFor(x => x.Amenities, new { @class = "control-label", @id = "lblAmenities" })
                        </div>
                        <div class="col-md-8">
                            @Html.TextBoxFor(x => x.Amenities, new { @class = "form-control", @id = "amenities", @readonly = true })
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-3">
                            @Html.LabelFor(x => x.Details, new { @class = "control-label", @id = "lblDetails" })
                        </div>
                        <div class="col-md-8">
                            @Html.TextBoxFor(x => x.Details, new { @class = "form-control", @id = "details", @readonly = true })
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        </div>
    </div>
</div>